mixin section-6
    section.section-6#program
        div.section-6__container
            div.section-6__content
                h3.section-6__title Program

                table
                    tr.table-head
                        - for (var n = 1; n <= 4; n++)
                            +table-header(n)
                    tr.table-body
                        - for (var i = 1; i <= 4; i++)
                            +block-1(i)
                    tr.table-body
                        - for (var i = 1; i <= 4; i++)
                            +block-2(i)
                    tr.table-body
                        - for (var i = 1; i <= 4; i++)
                            +block-3(i)