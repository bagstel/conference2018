extends libs/default

include ../components/section-1/section-1
include ../components/section-2/section-2
include ../components/section-3/section-3
include ../components/section-4/section-4
include ../components/section-5/section-5
include ../components/section-6/section-6

block variables
    - var title = 'title'
    - var description = 'description'
    - var keywords = 'keywords'

block links
    link(rel="stylesheet" href="css/main.css")

block scriptsToHead
    script(src="https:////cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    script(src="https://rawgit.com/alvarotrigo/fullPage.js/dev/src/fullpage.js")

block content
    div.page__wrapper#fullpage
        +section-1
        +section-2
        +section-3
        +section-4
        +section-5
        +section-6

block scriptsToBody
    script(src='js/bundle.js')